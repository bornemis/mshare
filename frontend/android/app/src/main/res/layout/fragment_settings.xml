<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:id="@+id/newPasswordTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="16dp"
            android:text="@string/newPasswordTextView"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/newPasswordText"
            app:layout_constraintEnd_toStartOf="@id/newPasswordText"
            app:layout_constraintHorizontal_bias="0.107"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/changePasswordTextView" />

    <TextView
            android:id="@+id/newPasswordAgainTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="16dp"
            android:text="@string/newPasswordAgainTextView"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/newPasswordAgainText"
            app:layout_constraintEnd_toStartOf="@id/newPasswordText"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/changePasswordTextView" />

    <TextView
            android:id="@+id/langTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/select_lang"/>


    <Button
            android:id="@+id/huButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/hu"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/langTextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/enButton"
            android:layout_margin="12dp" />

    <Button
            android:id="@+id/enButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/en"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/langTextView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/huButton"
            android:layout_margin="12dp" />

    <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toTopOf="@id/changePasswordTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/huButton" />

    <TextView
            android:id="@+id/changePasswordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/changePasswordLabel"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />

    <EditText
            android:id="@+id/oldPasswordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/oldPasswordTextView"
            app:layout_constraintTop_toBottomOf="@id/changePasswordTextView" />

    <EditText
            android:id="@+id/newPasswordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/newPasswordTextView"
            app:layout_constraintTop_toBottomOf="@id/changePasswordTextView" />

    <EditText
            android:id="@+id/newPasswordAgainText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="88dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/newPasswordAgainTextView"
            app:layout_constraintTop_toBottomOf="@id/changePasswordTextView" />

    <TextView
            android:id="@+id/oldPasswordTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:text="@string/oldPasswordTextView"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/oldPasswordText"
            app:layout_constraintEnd_toStartOf="@id/oldPasswordText"
            app:layout_constraintHorizontal_bias="0.123"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/changePasswordTextView" />

    <Button
            android:id="@+id/passwordSaveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/newPasswordAgainTextView" />

</android.support.constraint.ConstraintLayout>