<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/memberRootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/memberNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:layout_margin="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/groupMemberCountTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/memberOwnerTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="(owner)"
            android:layout_margin="6dp"
            app:layout_constraintStart_toEndOf="@id/memberNameTextView"
            app:layout_constraintEnd_toStartOf="@id/groupBalanceTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"/>

    <ImageButton

            android:id="@+id/removeMember"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_weight="1.00"
            android:background="@drawable/minus"
            app:layout_constraintStart_toEndOf="@id/memberOwnerTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/memberBalanceTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Balance"
            android:layout_margin="16dp"
            app:layout_constraintStart_toEndOf="@id/removeMember"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
